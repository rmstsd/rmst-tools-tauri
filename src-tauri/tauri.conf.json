{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "rmst-tools-tauri",
  "identifier": "com.rmst-tools-tauri.app",
  "build": {
    "beforeDevCommand": "pnpm dev-web",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build-web",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "setting",
        "title": "设置",
        "url": "index.html/#setting",
        "visible": false,
        "width": 1200,
        "height": 800,
        "center": true
      },
      {
        "label": "openFolder",
        "url": "index.html/#openFolder",
        "skipTaskbar": true,
        "center": true,
        "resizable": false,
        "visible": false,
        "decorations": false
      },
      {
        "label": "quickInput",
        "url": "index.html/#quickInput",
        "skipTaskbar": true,
        "visible": false,
        "width": 400,
        "height": 200,
        "decorations": false,
        "alwaysOnTop": true,
        "maximizable": false,
        "minimizable": false,
        "resizable": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "resources": {
      "icons2/*": "icons2/"
    },
    "active": true,
    "targets": ["nsis"],
    "icon": ["icons/32x32.png", "icons/128x128.png", "icons/128x128@2x.png", "icons/icon.icns", "icons/icon.ico"],
    "createUpdaterArtifacts": true,
    "windows": {
      "nsis": {
        "displayLanguageSelector": true,
        "languages": ["SimpChinese", "English"],
        "installerIcon": "icons/icon.ico"
      }
    }
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDQ1QzQxNTc0NUNDQzE0NzkKUldSNUZNeGNkQlhFUmZiUXAyakd1VVl5WENwZHFVMVZ1d2NCbU81OUNyRHdTc3oxV3hudnN2K2cK",
      "endpoints": ["https://github.com/rmstsd/rmst-tools-tauri/releases/latest/download/latest.json"],
      "windows": {
        "installMode": "passive"
      }
    }
  }
}
